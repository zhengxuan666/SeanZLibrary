<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayoutBase"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/fraLayoutHeadView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120"
        android:layout_alignParentTop="true"></FrameLayout>

    <FrameLayout
        android:id="@+id/fraLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fraLayoutHeadView"></FrameLayout>


    <com.seanz.library.view.view.progress.ProgressBarLayout
        android:id="@+id/load_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/fraLayoutHeadView"
        android:gravity="center"
        android:visibility="gone"></com.seanz.library.view.view.progress.ProgressBarLayout>

    <include
        android:id="@+id/errorLayout"
        layout="@layout/reset_error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fraLayoutHeadView"
        android:visibility="gone" />

    <include
        android:id="@+id/emptyLayout"
        layout="@layout/view_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fraLayoutHeadView"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/backgroud_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#25000000"
        android:visibility="gone"></FrameLayout>

</RelativeLayout>